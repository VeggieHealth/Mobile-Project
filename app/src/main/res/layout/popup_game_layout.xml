<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="16dp">

    <ImageView
        android:id="@+id/imgPopup"
        android:layout_width="248dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/benar" />

    <TextView
        android:id="@+id/tvPopupMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPopup"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Jawaban Anda Benar!"
        android:textColor="@color/green_7"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPopupMessage"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Next"
        android:fontFamily="@font/poppins_bold"
        app:cornerRadius="10dp" />
</RelativeLayout>